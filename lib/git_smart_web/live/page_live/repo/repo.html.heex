<li id={@id} class="flex space-x-3 p-2 bg-purple-50 hover:brightness-95 transition-all rounded-md">
  <img src={@repository.avatar_url} class="h-6 w-6 rounded-full" />
  <div class="flex-1 space-y-4">
    <div class="flex items-center justify-between">
      <h3><%= @repository.full_name %></h3>
      <span>
        <strong>Watchers:</strong> <%= @repository.watchers_count %>
      </span>
    </div>

    <div class="flex items-center justify-between">
      <p class="text-xs text-zinc-400">
        <%= @repository.description %>
      </p>
      <button
        type="button"
        phx-click="add_repo"
        phx-target={@myself}
        class="bg-sky-600 btn-default p-1"
      >
        +
      </button>
    </div>
    <div :if={@is_added} class="mt-8 text-right text-xs text-green-600">
      Repo added!
    </div>
  </div>
</li>
